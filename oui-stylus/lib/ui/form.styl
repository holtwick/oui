@require "../mixins";

control-hover = unquote("var(--control-hover, rgba(var(--primary-color-value), 0.1))");
control-active = unquote("var(--control-active, rgba(var(--primary-color-value), 0.8))");
control-radius = var(--control-radius, 4px);
control-border = var(--control-border, none);
input-color = var(--input-color, black);
input-background = var(--input-background, white);
input-border = var(--input-border, 1px solid -gray-300);
input-border-hover = var(--input-border-hover, 1px solid -gray-400);
input-radius = var(--input-radius, 4px);

// Don't get distracted by text selections or other sideeffects
oui-ui() {
  user-select: none;
  -webkit-user-select: none;
  cursor: default;
}

oui-input-reset() {
  appearance: none;
  -webkit-appearance: none;

  &, *, *::before, *::after {
    box-sizing: inherit;
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    vertical-align: baseline;
  }
}

oui-button-default() {
  oui-input-reset();
  stack-x(8);
  stack-item-center();
  /*
    // https://ishadeed.com/article/button-label-alignment/
    // &:before {
    // content: "";
    // display: inline-block;
    // height: 20;
    // vertical-align: middle;
    // }
  */
  display: inline-flex;
  height: 32;
  max-width: 100%;
  // cursor: pointer;
  pointer-events: initial;

  > * {
    display: inline-flex;
    flex: none;
  }

  &:focus {
    box-shadow: focus; /* Workaround for :focus that otherwise stays after mouse click */

    &:not(:focus-visible, :active) {
      box-shadow: unquote("inherit");
    }
  }

  &[disabled] {
    opacity: 0.6;
    cursor: initial;
  }

  // icon
  svg {
    size: 1em;
  }
}

// A simple button template
oui-button() {
  oui-button-default();
  font-weight: semibold;
  color: var(--button-bg);
  background: var(--button-bg);
  border-radius: control-radius;
  padding-x: 8;
  line-height: 1em;

  &:hover:not([disabled]) {
    background: control-hover;
  }

  &:active:not([disabled]) {
    background: control-active;
  }
}

oui-input-default() {
  oui-input-reset();
  padding-x: 8;
  min-height: 34;
  border-radius: input-radius;
  border: input-border;
  color: input-color;
  background: input-background;
  max-width: 100%; /* r:not(&[disabled]), &:hover:not(&:focus), &:hover:not(&:focus-within), &:hover:not(&:focus-visible) */

  &:hover {
    border: input-border-hover;
  }

  &:focus, &:focus-within {
    box-shadow: focus;
    border-color: -blue-500 !important; /* Workaround for :focus that otherwise stays after mouse click */

    &:not(:focus-visible, :active) {
      box-shadow: unquote("inherit");
      border-color: unquote("inherit");
    }
  }

  &[disabled] {
    opacity: 0.6;
    cursor: initial;
  }
}

oui-input-text() {
  oui-input-default();
}

oui-input-number() {
  oui-input-default();
  width: 12ch;
}

oui-label() {
  font-size: sm;
  cursor: pointer;
}

oui-select-icon() {
  padding-right: px(20 + 8);
  background: right no-repeat;
  background-color: input-background;
  background-position: right px(8) top 50%;
  background-size: px(20) px(20);
  background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='none'%3E%3Cpath d='M7 7l3-3 3 3m0 6l-3 3-3-3' stroke='%239fa6b2' stroke-width='1' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
}

oui-select() {
  oui-input-default();
  oui-select-icon();
  padding-y: 6;
}

control-boolean-height = px(16);
control-boolean-width = px(32);
control-boolean-margin = px(1);

oui-boolean-default() {
  --active: var(--button-bg);
  --active-inner: var(--button-bg);
  --border: var(--button-bg);
  --border-hover: control-hover;
  --background: var(--button-bg);
  --disabled: -gray-100;
  --disabled-inner: -gray-100;
  height: control-boolean-height;
  width: control-boolean-height;
  outline: none;
  display: inline-block;
  -webkit-appearance: none !important;
  -moz-appearance: none !important;
  appearance: none !important;
  // vertical-align baseline
  position: relative;
  margin: 0;
  margin-bottom: px(-2); // Align better
  cursor: pointer;
  border: 1px solid var(--bc, var(--border));
  background: var(--b, var(--background));
  transition: background 0.3s, border-color 0.3s, box-shadow 0.2s;

  &:after {
    content: "";
    display: block;
    left: 0;
    top: 0;
    position: absolute;
    transition: transform var(--d-t, 0.3s) var(--d-t-e, ease), opacity var(--d-o, 0.2s);
  }

  &:checked {
    --b: var(--active);
    --bc: var(--active);
    --d-o: 0.3s;
    --d-t: 0.6s;
    --d-t-e: cubic-bezier(0.2, 0.85, 0.32, 1.2);
  }

  &:disabled {
    --b: var(--disabled);
    cursor: not-allowed;
    opacity: 0.9;

    &:checked {
      --b: var(--disabled-inner);
      --bc: var(--border);
    }

    & + label {
      cursor: not-allowed;
    }
  }

  &:hover {
    &:not(:checked) {
      &:not(:disabled) {
        --bc: var(--border-hover);
      }
    }
  }

  &:focus {
    box-shadow: focus;
    border-color: -blue-500; /* Workaround for :focus that otherwise stays after mouse click */

    &:not(:focus-visible, :active) {
      box-shadow: unquote("inherit");
      border-color: unquote("inherit");
    }
  }

  & + label {
    line-height: control-boolean-height;
    display: inline-block;
    vertical-align: top;
    cursor: pointer;
  }
}

oui-checkbox() {
  oui-boolean-default();
  border-radius: base;
  width: control-boolean-height;

  &:after {
    opacity: var(--o, 0);
    width: rex(5);
    height: rex(9);
    border: rex(2) solid var(--active-inner);
    border-top: 0;
    border-left: 0;
    left: rex(5);
    top: rex(2);
    transform: rotate(var(--r, 20deg));
  }

  &:checked {
    --o: 1;
    --r: 43deg;
  }
}

oui-switch() {
  oui-boolean-default();
  height: control-boolean-height; // + px(2)
  width: control-boolean-width;
  border-radius: 999px;

  &:after { // knob
    left: control-boolean-margin;
    top: control-boolean-margin;
    border-radius: 50%;
    width: control-boolean-height - control-boolean-margin * 2 - px(2);
    height: control-boolean-height - control-boolean-margin * 2 - px(2); // height -margin - border
    background: var(--ab, var(--border));
    transform: translateX(var(--x, 0));
  }

  &:checked {
    --ab: var(--active-inner);
    --x: control-boolean-width - control-boolean-height - control-boolean-margin;
  }

  &:disabled {
    &:not(:checked) {
      &:after {
        opacity: 0.6;
      }
    }
  }
}

oui-radio() {
  oui-boolean-default();
  border-radius: 50%;

  &:after {
    width: 19px;
    height: 19px;
    border-radius: 50%;
    background: var(--active-inner);
    opacity: 0;
    transform: scale(var(--s, 0.7));
  }

  &:checked {
    --s: 0.5;
  }
}
