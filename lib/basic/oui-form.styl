@require "../../stylus/index.styl";

.oui {
  oui-form();
}

.oui-input-group {
  use: stack-x;

  button, input {
    &:not(:last-child) {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    &:not(:first-child) {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      border-left: none;
    }

    &:focus {
      z-index: 1;
    }
  }
}

.oui-form-item {
  margin-y: 8;

  label {
    display: block;

    span {
      color: -red-600;
    }
  }

  &-title {
    display: block;
    font-size: 13;
    font-weight: 500;
    margin-bottom: 4;
  }

  &-description {
    display: block;
    font-size: 13;
    font-weight: 500;
    margin-top: 4;
    margin-bottom: 12;
    color: var(--t3-fg);
  }

  .oui-select {
    min-width: min(100%, 12ch);
  }

  .oui-input-string, .oui-textarea, .oui-password {
    width: 100%;
  }
}

.oui-notice {
  use: center;
  text-align: center;
  height: 100%;
  color: var(--s2-fg);

  &-body {
    use: stack-y;
    gap: 16;
    max-width: min(40ch, 80%);
  }

  svg {
    size: 1em;
  }

  &-title {
    font-size: 32;
    font-weight: 500;
  }

  &-icon svg {
    size: 64;
  }

  &-message {
  }
}