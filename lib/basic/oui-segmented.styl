@require "../../stylus/index.styl";

.oui-segmented {
  position: relative;
  display: inline-flex;
  border: 1px solid var(--border-color, #e1e5e9);
  border-radius: 6px;
  background: var(--bg-color, white);
  overflow: hidden;
  outline: none;

  &._error {
    border-color: var(--error-color, #e53e3e);

    &._focused {
      border-color: var(--error-color, #e53e3e);
      box-shadow: 0 0 0 1px var(--error-color, #e53e3e);
    }
  }

  &._size-md {
    height: 32;
    font-size: 14;
  }

  &._size-lg {
    height: 40;
    font-size: 16;
  }

  .oui-segmented-container {
    display: flex;
    width: 100%;
    padding: 4;
    gap: 4;
    position: relative;
  }

  .oui-segmented-pill {
    background: var(--p1-fg, #3182ce);
    border-radius: 4;
  }

  button {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4;
    border: none;
    background: transparent;
    color: var(--fg);
    cursor: pointer;
    transition: color 200ms ease;
    white-space: nowrap;
    flex: 1;
    min-width: 0;
    gap: 8;

    &:hover:not(._active) {
      background: var(--s2-bg, #f7fafc);
    }

    &._active {
      color: white;
    }
  }

  &[disabled] {
    cursor: not-allowed;
    background-color: var(--t3-bg);

    > * {
      opacity: 0.6;
    }

    button {
      cursor: not-allowed;
    }
  }
}
