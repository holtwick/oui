.demo-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 24px;
  font-family: system-ui, -apple-system, sans-serif;
}

h1 {
  font-size: 32px;
  margin-bottom: 32px;
  color: #333;
}

h2 {
  font-size: 24px;
  margin: 32px 0 16px 0;
  color: #444;
}

h3 {
  font-size: 18px;
  margin: 16px 0 8px 0;
  color: #555;
}

.demo-section {
  margin-bottom: 48px;
  padding: 24px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  background: #fafafa;
}

p {
  margin-bottom: 16px;
  line-height: 1.5;
  color: #666;
}

pre {
  background: #2d3748;
  color: #e2e8f0;
  padding: 16px;
  border-radius: 4px;
  overflow-x: auto;
  font-family: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, "Courier New", monospace;
  font-size: 14px;
  line-height: 1.5;
}

ul {
  list-style: none;
  padding: 0;

  li {
    padding: 8px 0;
    border-bottom: 1px solid #e0e0e0;

    &:last-child {
      border-bottom: none;
    }

    strong {
      color: #333;
    }

    span {
      color: #666;
      margin-left: 8px;
    }
  }
}