@require "../../stylus/index.styl";

oui-modal() {
  if __oui_once("oui-modal") {
    --modal-separator: transparent;
    --modal-bg: var(--dialog-bg, white);
    align-items: center;
    display: none;
    justify-content: center;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    @media -media-desktop {
      padding: 8;
    }

    @media -media-mobile {
      padding: 0;
    }

    &:target, &._active {
      display: flex;
      z-index: -z-index-overlay;

      // Background overlay
      ._modal_overlay {
        background: var(--dialog-backdrop, rgba(0, 0, 0, 0.16));
        -webkit-backdrop-filter: blur(4px);
        backdrop-filter: blur(4px);
        // background: var(--dialog-backdrop, rgba(0, 0, 0, 0.75));
        cursor: default;
        display: block;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        top: 0;
      }

      ._modal_container {
        animation: slide-down 0.2s ease 1;
        z-index: -z-index-modal;
      }
    }

    ._modal_container {
      use: stack-y;
      animation: slide-down 0.2s ease 1;
      z-index: -z-index-modal;
      position: relative;
      box-shadow: lg;
      background: var(--modal-bg, -gray-50);
      width: Min(64ch, 90vw);

      @media -media-desktop {
        border: 1px solid var(--modal-separator, -gray-200);
        border-radius: var(--dialog-radius, 8px);
        max-height: 75vh;
      }

      @media -media-mobile {
        position: fixed;
        width: auto;
        top: calc(44px + var(--visible-offset-top, 0px));
        border-top-left-radius: var(--dialog-radius, 8px);
        border-top-right-radius: var(--dialog-radius, 8px);
        height: calc(var(--visible-height, 100vh) - 44px);
      }
    }

    ._modal_header {
      use: stack-y;
      border-bottom: 1px solid var(--modal-separator, -gray-200);
      padding: 16;
      padding-right: 40;
      font-weight: 600;
    }

    ._modal_close {
      position: absolute;
      top: 2;
      right: 2;
      background: transparent;
      border-radius: var(--dialog-radius, 8px);
      // z-index: 99999;
      font-size: 16;
      cursor: unquote("pointer");
      color: inherit;
      padding: 12;
      border: none;
      appearance: none;

      &:hover {
        color: var(--primary-color);
      }
    }

    ._modal_footer {
      border-top: 1px solid var(--modal-separator, -gray-200);
      text-align: right;
      // white-space: nowrap;
      padding: 16;
      padding-bottom: -safe-bottom;

      > * {
        margin-left: 8;
      }
    }

    ._modal_body {
      use: stack-item-grow;
      use: stack-item-scroll;
      margin: 0;
      min-height: 32;
      padding-y: 0;
      padding-x: 16;
      position: relative;
    }

    &-transition {
      &-enter-active, &-leave-active {
        transition: all 200ms ease;
        opacity: 1;

        ._modal_container {
          transition: all 200ms ease;
          transform: translate3d(0, 0, 0);
        }
      }

      &-enter-from, &-leave-to {
        opacity: 0;

        ._modal_container {
          transform: translate3d(0, 100%, 0);
        }
      }
    }
  }
}
