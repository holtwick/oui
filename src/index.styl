@require "../stylus/default-page.styl";

.app-demo {
  border-bottom: 2px solid #ccc;
  margin-bottom: 16;
  padding-bottom: 16;
}

.default {
  color: var(--fg);
  background-color: var(--bg);
  padding: 8;
}

.oui-form {
  oui-form-defaults();
}

.oui-input-group {
  use: stack-x;

  button, input {
    &:not(:last-child) {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    &:not(:first-child) {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      border-left: none;
    }
  }
}