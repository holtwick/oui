@require "../stylus/default-app.styl";

.default {
  color: var(--fg);
  background-color: var(--bg);
  padding: 8;
}

.oui-form {
  oui-form-defaults();
}

.oui-demo {
  height: 100%;
  use: stack-y;

  &-header {
    use: stack-x;
    padding: 16;
    background: var(--t3-bg);
    border-bottom: 1px solid var(--t3-fg);
    gap: 8;

    ._middle {
      use: center;
    }
  }

  &-body {
    use: stack-x;
    use: grow;
  }

  &-sidebar {
    use: stack-y;
    background: var(--s2-bg);

    h1 {
      font-weight: 600;
      font-size: 24;
      margin-bottom: 16;
    }
  }

  &-props {
    use: stack-y;
    use: grow;
    gap: 8;

    label {
      display: block;
    }
  }

  &-state, &-props {
    use: scroll;
    padding: 16;
  }

  &-sandbox {
    use: grow;

    &:not(._sidebyside) {
      use: scroll;
      padding: 16;
    }

    &._sidebyside {
      use: stack-x;
      padding: 0;

      > div {
        use: grow;
        use: scroll;
        padding: 16;
        min-height: 100%;
      }
    }
  }
}

body {
  -webkit-overflow-scrolling: none;
  overscroll-behavior: none;
}

/* https://gist.github.com/kiding/72721a0553fa93198ae2bb6eefaa3299 */
@keyframes blink_input_opacity_to_prevent_scrolling_when_focus {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

:focus {
  animation: blink_input_opacity_to_prevent_scrolling_when_focus 0.01s;
}
