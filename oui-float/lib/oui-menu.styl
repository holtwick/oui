@require "oui-stylus";

oui-menu() {
  if __oui_once("oui-menu") {
    --menu-bg: -gray-100; // ButtonFace;
    --menu-border: 1px solid -gray-400; // ButtonShadow;
    --menu-radius: px(4);
    --item-fg: -gray-900; // ButtonText;
    --item-bg: none;
    --item-hover-fg: HighlightText;
    --item-hover-bg: Highlight;
    // --item-active-color: black;
    // --item-active-background: white;
    --item-separator: -gray-300;
    use: stack-y;
    cursor: default;
    max-width: 20rem;
    min-width: 10rem;
    padding: px(4) px(4);
    background: var(--menu-bg);
    border: var(--menu-border);
    border-radius: var(--menu-radius);
    box-shadow: var(--menu-shadow, -box-shadow-md);
    list-style: none;
    // z-index: -z-index-popover;
    font-family: inherit;
    font-size: 10pt;
    font-weight: 500;

    ._menu_item {
      color: var(--item-fg);
      background: var(--item-bg);
      list-style: none;
      border-radius: px(2);
      white-space: nowrap;
      position: relative;
      display: flex;
      padding: px(4) px(8);

      &:hover {
        color: var(--item-hover-fg);
        background: var(--item-hover-bg);
      }

      &._menu__active, &:active {
        color: var(--item-hover-fg);
        background: var(--item-hover-bg);
      }
    }

    ._menu_checked_possible, ._menu_checked {
      padding-left: 28;
    }

    ._menu_checked {
      &:before {
        position: absolute;
        left: 8;
        content: "✔︎";
      }
    }

    ._menu_separator {
      display: flex;
      height: px(1);
      max-height: px(1);
      min-height: 1px;
      border: none;
      padding: 0;
      margin-top: px(4);
      margin-bottom: px(4);
      background: var(--item-separator);
    }
  }
}